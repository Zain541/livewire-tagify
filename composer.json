{
    "name": "codekinz/livewire-tagify",
    "description": "A Laravel tag system for artisans which is built in Livewire, Laravel Spatie tags, Tagify and Alpine Js.",
    "type": "library",
    "require": {
        "php": "^7.4|^8.0",
        "livewire/livewire": "^2.12",
        "spatie/laravel-tags": "^4.4"
    },
    "autoload": {
        "psr-4": {
            "Codekinz\\LivewireTagify\\": "src/",
            "Codekinz\\LivewireTagify\\Tests\\": "tests/"
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Zain Farooq",
            "email": "zainfarooq541@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,

    "extra": {
        "laravel": {
            "providers": [
                    "Codekinz\\LivewireTagify\\LivewireTagifyServiceProvider"
                ]
            }
        },
    "require-dev": {
        "laravel/pint": "^1.25",
        "pestphp/pest": "^2.36",
        "pestphp/pest-plugin-laravel": "^2.4",
        "orchestra/testbench": "^8.34"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
